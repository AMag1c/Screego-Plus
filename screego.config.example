# Screego服务器配置文件
# 将此文件重命名为screego.config并根据需要修改配置

# 服务器TLS设置（false=HTTP, true=HTTPS）
SCREEGO_SERVER_TLS=false

# 服务器监听地址和端口
SCREEGO_SERVER_ADDRESS=:9100

# 外部IP地址（替换为你的服务器公网IP）
SCREEGO_EXTERNAL_IP=YOUR_SERVER_IP

# TURN服务器配置
SCREEGO_TURN_ADDRESS=:3478
SCREEGO_TURN_PORT_RANGE=50000:60000

# 认证模式 (none=无需认证, turn=仅TURN认证, all=全部需要认证)
SCREEGO_AUTH_MODE=all

# 允许的跨域来源
SCREEGO_CORS_ALLOWED_ORIGINS=*

# 日志级别 (trace, debug, info, warn, error, fatal, panic)
SCREEGO_LOG_LEVEL=info

# 会话超时时间（秒，0=不超时）
SCREEGO_SESSION_TIMEOUT_SECONDS=3600

# 房主离开时是否关闭房间
SCREEGO_CLOSE_ROOM_WHEN_OWNER_LEAVES=true

# 是否启用Prometheus指标
SCREEGO_PROMETHEUS=false

# 信任代理头（如果在反向代理后面使用）
SCREEGO_TRUST_PROXY_HEADERS=true
